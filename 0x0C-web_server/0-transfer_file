if [ "$#" -lt 4 ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

FILE_PATH="$1"
SERVER_ID="$2"
USERNAME="$3"
SSH_KEY_PATH="$4"

# transfer the file to the  user's home directory with the strict host key checking disable.
scp -i "$SSH_KEY_PATH" -o StrictHostKeyChecking=no "$FILE_PATH" "$USERNAME@$SERVER_ID:~/"